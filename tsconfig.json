{
  "compilerOptions": {
    "noEmit": true,
    "preserveWatchOutput": true,
    "pretty": true,

    "target": "es2015",
    "lib": ["es2015", "DOM"],

    "module": "es2015",
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    
    "baseUrl": "src",
    "paths": {
      "@bouncer/*": ["lib/*"]
    }
  }
}
