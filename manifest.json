{
  "manifest_version": 2,
  "name": "Bouncer",
  "version": "0.0.1",
  "description": "Ridiculously configurable website limiter.",
  
  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["timer.js"]
    }
  ],
  
  "web_accesible_resources": [
    "blocked.html"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "bouncer@noahpauls.com"
    }
  }
}