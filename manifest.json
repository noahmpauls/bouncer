{
  "manifest_version": 3,
  "name": "Bouncer",
  "version": "0.11.0",
  "description": "Ridiculously configurable website limiter.",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_title": "Bouncer",
    "default_icon": "assets/code.svg",
    "default_popup": "dist/ui/popup/index.html"
  },
  
  "background": {
    "scripts": ["dist/background/bouncerBackground.js"]
  },

  "content_scripts": [
    {
      "js": [
        "dist/content/bouncerContent.js"
      ],
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "dist/ui/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "bouncer@noahpauls.com"
    }
  }
}